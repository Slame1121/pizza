<ul class="footer__list">
    {% if categories %}
        {% for category in categories %}
            <li class="footer__item"><a class="footer__link" href="{{ category.href }}">{{ category.name }}</a></li>
        {% endfor %}
    {% endif %}
</ul>
<ul class="footer__list">
    {% if custom_pages %}
        {% for page in custom_pages %}
            <li class="footer__item"><a class="footer__link" href="{{ page.link }}">{{ page.title }}</a></li>
        {% endfor %}
    {% endif %}
</ul>