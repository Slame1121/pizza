{{ header }}
<section id="information-sitemap" class="page">
    <div class="container">

        <div class="breadcrumbs">
            <ol class="breadcrumbs_list">
                {% set count = 1 %}
                {% for breadcrumb in breadcrumbs %}
                    <li itemprop="itemListElement" itemscope
                        itemtype="http://schema.org/ListItem" > {% if loop.index != breadcrumbs|length  %}<a itemscope itemtype="http://schema.org/Thing"
                                                                                                             itemprop="item"  href="{{ breadcrumb.href }}"> {% endif %}<span itemprop="name">{{ breadcrumb.text }} </span>{% if loop.index != breadcrumbs|length  %}</a>{% endif %}
                        <meta itemprop="position" content="{{ count }}" />
                        {% set count = count + 1 %}
                    </li>
                    {% if loop.index != breadcrumbs|length  %}
                        <li><i class="card__controls-breadcrumb_delimiter" >></i></li>
                    {% endif %}
                {% endfor %}
            </ol>
        </div>
        <h1>{{ heading_title }}</h1>
        <div class="row">
            <div class="col-sm-6">
                <ul>
                    {% for category_1 in categories %}
                        <li><a href="{{ category_1.href }}">{{ category_1.name }}</a>
                            {% if category_1.products %}
                                {% for product in category_1.products %}
                                    <ul>
                                        <li><a href="{{ product.href }}">{{ product.name }}</a></li>
                                    </ul>

                                 {% endfor %}
                            {% endif %}
                            {% if category_1.children %}
                                <ul>
                                    {% for category_2 in category_1.children %}
                                        <li><a href="{{ category_2.href }}">{{ category_2.name }}</a>
                                            {% if category_2.children %}
                                                <ul>
                                                    {% for category_3 in category_2.children %}
                                                        <li><a href="{{ category_3.href }}">{{ category_3.name }}</a></li>
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-sm-6">
                <ul>
                    <li>{{ text_information }}
                        <ul>
                            {% for information in informations %}
                                <li><a href="{{ information.href }}">{{ information.title }}</a></li>
                            {% endfor %}
                            <li><a href="{{ contact }}">{{ text_contact }}</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        {{ map }}
    </div>
</section>
{{ footer }}
