{{ header }}
<section class="menu page">
    <div class="container">
        <h2>{{ heading_title }}</h2>
        <div class="menu-tabs">
            {% for group in attributes %}
                <div class="menu-tabs__item"><a class="menu-tabs__link" href="#">{{ group.name }}</a>
                    <div class="menu-tabs__drop">
                        {% for attr in group.attr %}
                            <div class="menu-tabs__line">
                                <label class="menu-tabs__line-label">
                                    <input type="checkbox" name="checkbox"><span class="menu-tabs__line-box"></span><span class="menu-tabs__line-name">{{ attr.name }}</span>
                                </label>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="menu__text">Вид реального товара может незначительно отличаться от изображения на сайте</div>
        <div class="hit__content">
            {{ products }}
        </div>
        {{ reviews }}
    </div>
</section>
{{ footer }}